generator client {
  provider = "prisma-client-js"
}
// segun las variables de entorno y escogemos el proveedor de base de datos
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// creamos nuestro modelo en la base de datos
model Product {
  id Int@id @default(autoincrement())
  name String
  description String
  price Float
  avaliable Boolean @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // indezamos el campo de available para mejorar las consultas
  @@index([avaliable])

}